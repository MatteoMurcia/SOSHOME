<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.mycompany.soshome2.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrerServlet</servlet-name>
        <servlet-class>com.mycompany.soshome2.servlets.RegistrerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistroCServlet</servlet-name>
        <servlet-class>com.mycompany.soshome2.servlets.RegistroCServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistroPServlet</servlet-name>
        <servlet-class>com.mycompany.soshome2.servlets.RegistroPServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrerServlet</servlet-name>
        <url-pattern>/RegistrerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistroCServlet</servlet-name>
        <url-pattern>/RegistroCServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistroPServlet</servlet-name>
        <url-pattern>/RegistroPServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
